<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.noprestige.kanaquiz">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainQuiz"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OptionsScreen"
            android:label="@string/options_title"
            android:parentActivityName=".MainQuiz" />
        <activity
            android:name=".KanaSelection"
            android:label="@string/selection_title"
            android:parentActivityName=".MainQuiz" />
        <activity
            android:name=".AboutScreen"
            android:label="@string/about_title"
            android:parentActivityName=".MainQuiz" />
        <activity
            android:name=".ReferenceScreen"
            android:label="@string/reference_title"
            android:parentActivityName=".MainQuiz" />
    </application>

</manifest>