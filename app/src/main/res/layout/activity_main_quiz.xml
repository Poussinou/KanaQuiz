<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_quiz"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.noprestige.kanaquiz.MainQuiz"
    tools:menu="@menu/menu">

    <TextView
        android:id="@+id/lblDisplayKana"
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:autoSizeMaxTextSize="144sp"
        android:autoSizeTextType="uniform"
        android:gravity="center_vertical"
        android:text=""
        android:textAlignment="center"
        android:textSize="144sp"/>

    <TextView
        android:id="@+id/lblResponse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/txtAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:imeOptions="actionGo"
        android:inputType="textNoSuggestions"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:text=""
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/lblScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:minLines="2"
        android:text=""
        android:textAlignment="center"/>

    <com.noprestige.kanaquiz.MultipleChoicePad
        android:id="@+id/btnMultipleChoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible"/>

</LinearLayout>
